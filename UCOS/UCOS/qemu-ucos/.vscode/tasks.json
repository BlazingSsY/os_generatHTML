{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "debug",
          "type": "shell",
          "command": "make",
          "args": [
              "debug"
          ],
          "group": "build",
          "problemMatcher": [
              "$gcc"
          ],
          "detail": "Generated task"
      },
      {
          "label": "release",
          "type": "shell",
          "command": "make",
          "args": [
              "run"
          ],
          "group": "build",
          "problemMatcher": [
              "$gcc"
          ],
          "detail": "Generated task"
      },
      {
          "label": "clean",
          "type": "shell",
          "command": "make",
          "args": [
              "clean"
          ],
          "group": "build",
          "problemMatcher": []
      },
      {
          "type": "cppbuild",
          "label": "C/C++: powerpc-linux-gnu-gcc 生成活动文件",
          "command": "/usr/bin/powerpc-linux-gnu-gcc",
          "args": [
              "-fdiagnostics-color=always",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "调试器生成的任务。"
      }
  ]
}